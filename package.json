{
  "name": "drawtogether-bedrock",
  "version": "1.0.0",
  "description": "Bedrock image analysis and regeneration for DrawTogether game",
  "main": "lambda/ai.js",
  "scripts": {
    "build": "cd lambda && npm run build",
    "build:watch": "cd lambda && npm run build:watch",
    "test": "jest",
    "test:ai": "jest lambda/src/ai/__tests__/",
    "test:integration": "jest lambda/src/__tests__/integration/",
    "test:live": "cd lambda && npx ts-node src/__tests__/integration/run-live-test.ts",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lambda:install": "cd lambda && npm install",
    "lambda:build": "npm run build",
    "deploy": "cdk deploy",
    "clean": "cd lambda && npm run clean && rm -rf coverage",
    "upload-samples": "node scripts/upload-sample-images.js",
    "create-test-bucket": "node scripts/create-test-bucket.js",
    "create-test-images": "node scripts/create-test-images.js",
    "create-feed-images": "node scripts/create-feed-images.js",
    "dev:lambda": "npm run lambda:build && cd lambda && npm run typecheck && node local-server.js",
    "dev:front": "cd frontend && npm run dev",
    "start:front:local": "npm run dev:front",
    "start:lambda:local": "npm run dev:lambda"
  },
  "dependencies": {
    "@aws-cdk/aws-amplify-alpha": "^2.214.0-alpha.0",
    "@aws-sdk/client-bedrock-runtime": "^3.0.0",
    "aws-cdk": "^2.1028.0",
    "aws-cdk-lib": "^2.214.0",
    "aws-sdk": "^2.1692.0",
    "constructs": "^10.4.2",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "multer": "^1.4.5-lts.1"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.145",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.10.2",
    "jest": "^30.1.3",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2"
  },
  "keywords": [
    "aws",
    "bedrock",
    "ai",
    "image-processing",
    "lambda"
  ],
  "author": "DrawTogether Team",
  "license": "MIT"
}
